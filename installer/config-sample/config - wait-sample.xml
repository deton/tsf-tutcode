      <row ro="く゛" hi="ぐ" ka="グ" an="ｸﾞ" so="2" />
      <row ro="ク゛" hi="ぐ" ka="グ" an="ｸﾞ" so="2" />
      <row ro="ふ゛" hi="ぶ" ka="ブ" an="ﾌﾞ" so="2" />
      <row ro="ふ゜" hi="ぷ" ka="プ" an="ﾌﾟ" so="2" />
      <row ro="フ゛" hi="ぶ" ka="ブ" an="ﾌﾞ" so="2" />
      <row ro="フ゜" hi="ぷ" ka="プ" an="ﾌﾟ" so="2" />
      -->

<!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

    </list>
